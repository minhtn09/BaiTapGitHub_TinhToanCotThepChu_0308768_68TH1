<UserControl x:Class="DALTXD_CTTTCotThepChuH_0308768_68TH1.Views.Ribbon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
             mc:Ignorable="d" d:DesignWidth="800"
             >
    <Grid>
        <ribbon:Ribbon>
            <ribbon:RibbonTab Header="Dữ liệu">

                <ribbon:RibbonGroup Header="Tệp tin">
                    <ribbon:RibbonButton Label="Tạo mới"/>
                    <ribbon:RibbonButton Label="Mở"/>
                    <ribbon:RibbonButton Label="Lưu"/>
                </ribbon:RibbonGroup>

                <ribbon:RibbonGroup Header="ETABS API">
                    <ribbon:RibbonButton Label="Kết nối"/>
                    <ribbon:RibbonButton Label="Lấy dữ liệu"/>
                </ribbon:RibbonGroup>

                <ribbon:RibbonGroup Header="Vật liệu">
                    <ribbon:RibbonButton Label="Khai báo vật liệu"
                         Click="BtnVatLieu_Click"/>
                </ribbon:RibbonGroup>

                <ribbon:RibbonGroup Header="Thông số">
                    <ribbon:RibbonButton Label="Thông số đầu vào"
                         Click="BtnthongsoDauvao_Click"/>
                    <ribbon:RibbonButton Label="Thông số thiết kế"
                         Click="Btnthongsothietke_Click"/>
                </ribbon:RibbonGroup>

            </ribbon:RibbonTab>
            <ribbon:RibbonTab Header="Thiết kế">

                <ribbon:RibbonGroup Header="Tính toán">
                    <ribbon:RibbonButton Label="Tính toán"/>
                    <ribbon:RibbonButton Label="Xem kết quả"/>
                </ribbon:RibbonGroup>

                <ribbon:RibbonGroup Header="Báo cáo">
                    <ribbon:RibbonButton Label="Xuất báo cáo"/>
                </ribbon:RibbonGroup>

            </ribbon:RibbonTab>

            <ribbon:RibbonTab Header="Hiển thị">

                <ribbon:RibbonGroup Header="Mặt bằng">
                    <ribbon:RibbonButton Label="Theo tầng"/>
                </ribbon:RibbonGroup>

                <ribbon:RibbonGroup Header="Mặt đứng">
                    <ribbon:RibbonButton Label="Theo trục"/>
                </ribbon:RibbonGroup>

                <ribbon:RibbonGroup Header="Tiện ích">
                    <ribbon:RibbonButton Label="Zoom In"/>
                    <ribbon:RibbonButton Label="Zoom Out"/>
                    <ribbon:RibbonButton Label="Pan"/>
                </ribbon:RibbonGroup>

                <ribbon:RibbonGroup Header="Quản lý hiển thị">
                    <ribbon:RibbonButton Label="Label"/>
                    <ribbon:RibbonButton Label="Section"/>
                </ribbon:RibbonGroup>

            </ribbon:RibbonTab>

            <ribbon:RibbonTab Header="Trợ giúp">
                <ribbon:RibbonGroup Header="Thông tin">
                    <ribbon:RibbonButton Label="Hướng dẫn"/>
                    <ribbon:RibbonButton Label="Giới thiệu"/>
                </ribbon:RibbonGroup>
            </ribbon:RibbonTab>
            
        </ribbon:Ribbon>
    </Grid>

</UserControl>
