<Window x:Class="DALTXD_CTTTCotThepChuH_0308768_68TH1.Views.POPUP.thongsothietke"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông số thiết kế"
        Height="606"
        Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#2D2D30">
    <Grid Margin="0,0,0,-30">   
        <Border Background="#F5F5F5"
            Margin="35"
            Padding="30"
            CornerRadius="5">

            <StackPanel>

                <!-- GROUPBOX -->
                <GroupBox Header="Thiết lập thông số thiết kế"
                      FontSize="16"
                      FontWeight="SemiBold"
                      Padding="20"
                      Margin="0,0,0,35">

                    <Grid Margin="10">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <!-- Hệ số an toàn -->
                        <TextBlock Grid.Row="0"
                               Text="Hệ số an toàn γ"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0"
                             Grid.Column="1"
                             x:Name="txtGamma"
                             Height="32"
                             FontSize="14"/>

                        <!-- Chiều dài tính toán -->
                        <TextBlock Grid.Row="1"
                               Text="Chiều dài tính toán L (mm)"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1"
                             Grid.Column="1"
                             x:Name="txtLength"
                             Height="32"
                             FontSize="14"/>

                        <!-- Điều kiện liên kết -->
                        <TextBlock Grid.Row="2"
                               Text="Điều kiện liên kết"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="2"
                              Grid.Column="1"
                              Height="32"
                              FontSize="14"
                              x:Name="cbLienKet">
                            <ComboBoxItem Content="Ngàm - Ngàm"/>
                            <ComboBoxItem Content="Khớp - Khớp"/>
                            <ComboBoxItem Content="Ngàm - Khớp"/>
                            <ComboBoxItem Content="Tự do - Ngàm"/>
                        </ComboBox>

                        <!-- Hệ số tổ hợp -->
                        <TextBlock Grid.Row="3"
                               Text="Hệ số tổ hợp tải"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3"
                             Grid.Column="1"
                             x:Name="txtToHop"
                             Height="32"
                             FontSize="14"/>

                        <!-- Loại thép -->
                        <TextBlock Grid.Row="4"
                               Text="Loại thép"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="4"
                              Grid.Column="1"
                              Height="32"
                              FontSize="14"
                              x:Name="cbSteel">
                            <ComboBoxItem Content="SS400"/>
                            <ComboBoxItem Content="Q235"/>
                            <ComboBoxItem Content="CT3"/>
                            <ComboBoxItem Content="S355"/>
                        </ComboBox>

                        <!-- Tiêu chuẩn -->
                        <TextBlock Grid.Row="5"
                               Text="Tiêu chuẩn thiết kế"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="5"
                              Grid.Column="1"
                              Height="32"
                              FontSize="14"
                              x:Name="cbTieuChuan">
                            <ComboBoxItem Content="TCVN"/>
                            <ComboBoxItem Content="Eurocode 3"/>
                            <ComboBoxItem Content="AISC"/>
                        </ComboBox>

                    </Grid>
                </GroupBox>

                <!-- BUTTON -->
                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">

                    <Button Content="Lưu"
                        Width="150"
                        Height="40"
                        FontSize="14"
                        Margin="0,0,40,0"/>

                    <Button Content="Đóng"
                        Width="150"
                        Height="40"
                        FontSize="14"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>
