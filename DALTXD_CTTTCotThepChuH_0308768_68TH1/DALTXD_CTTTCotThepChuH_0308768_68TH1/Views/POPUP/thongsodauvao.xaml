<Window x:Class="DALTXD_CTTTCotThepChuH_0308768_68TH1.Views.POPUP.thongsodauvao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DALTXD_CTTTCotThepChuH_0308768_68TH1.Views.POPUP"
        mc:Ignorable="d"
        Title="thongsodauvao" Height="450" Width="800">
    <Grid>
        <Border Background="#F5F5F5"
        Margin="35"
        Padding="30"
        CornerRadius="5">

            <StackPanel>

                <!-- GROUPBOX -->
                <GroupBox Header="Nhập các số liệu đầu vào"
                  FontWeight="SemiBold"
                  FontSize="16"
                  Margin="0,0,0,35">

                    <Grid Margin="10">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <!-- Lực nén -->
                        <TextBlock Grid.Row="0"
                           Text="Lực nén N (kN)"
                           FontSize="14"
                           VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0"
                         Grid.Column="1"
                         x:Name="txtN"
                         Height="32"
                         FontSize="14"/>

                        <!-- Cường độ -->
                        <TextBlock Grid.Row="1"
                           Text="Cường độ f (MPa)"
                           FontSize="14"
                           VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1"
                         Grid.Column="1"
                         x:Name="txtF"
                         Height="32"
                         FontSize="14"/>

                        <!-- Gamma -->
                        <TextBlock Grid.Row="2"
                           Text="Hệ số γ"
                           FontSize="14"
                           VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2"
                         Grid.Column="1"
                         x:Name="txtGamma"
                         Height="32"
                         FontSize="14"/>

                        <!-- Module đàn hồi -->
                        <TextBlock Grid.Row="3"
                           Text="Module đàn hồi E (MPa)"
                           FontSize="14"
                           VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3"
                         Grid.Column="1"
                         x:Name="txtE"
                         Height="32"
                         FontSize="14"/>

                        <!-- Độ mảnh -->
                        <TextBlock Grid.Row="4"
                           Text="Độ mảnh λ"
                           FontSize="14"
                           VerticalAlignment="Center"/>
                        <TextBox Grid.Row="4"
                         Grid.Column="1"
                         x:Name="txtLambda"
                         Height="32"
                         FontSize="14"/>
                    </Grid>
                </GroupBox>

                <!-- BUTTONS -->
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">

                    <Button Content="Sao lưu"
                    Width="150"
                    Height="40"
                    FontSize="14"
                    Margin="0,0,40,0"/>

                    <Button Content="Đóng"
                    Width="150"
                    Height="40"
                    FontSize="14"/>
                </StackPanel>

            </StackPanel>
        </Border>

    </Grid>
</Window>
